{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noGlobalIsNan": "off"
      }
    },
    "ignore": [
      ".next",
      ".idea"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "bracketSpacing": true
    }
  }
}
